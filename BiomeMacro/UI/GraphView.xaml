<UserControl x:Class="BiomeMacro.UI.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vm="clr-namespace:BiomeMacro.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="*"/>    <!-- Bar Chart -->
            <RowDefinition Height="20"/>   <!-- Spacer -->
            <RowDefinition Height="*"/>    <!-- Line Chart -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Biome Statistics" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Bar Chart: Distribution -->
        <Grid Grid.Row="1">
            <Border Background="{DynamicResource CardBrush}" CornerRadius="12" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Biome Encounters (Total)" FontSize="18" Margin="0,0,0,10" Opacity="0.8"/>
                    
                    <lvc:CartesianChart Grid.Row="1"
                                        Series="{Binding BiomeDistributionSeries}"
                                        XAxes="{Binding BiomeDistributionXAxes}"
                                        YAxes="{Binding BiomeDistributionYAxes}"
                                        ZoomMode="X"
                                        TooltipPosition="Top">
                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>

        <!-- Line Chart: Rarity Timeline -->
        <Grid Grid.Row="3">
            <Border Background="{DynamicResource CardBrush}" CornerRadius="12" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Rarity Timeline (Biome Level)" FontSize="18" Margin="0,0,0,10" Opacity="0.8"/>

                    <lvc:CartesianChart Grid.Row="1"
                                        Series="{Binding RarityTimelineSeries}"
                                        XAxes="{Binding RarityTimelineXAxes}"
                                        YAxes="{Binding RarityTimelineYAxes}"
                                        ZoomMode="X"
                                        TooltipPosition="Top">
                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
